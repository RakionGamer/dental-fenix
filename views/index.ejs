<% include header %>

    <main>
        <h1>¡Bienvenido!</h1>
        <h2>¿Qué desea hacer?</h2>
        <section class="crud">
            <div class="pin-pon">
                <div class="effect">
                    <form action="/add" method="POST">
                        <div class="_position-input">
                            <input type="number" class="id" placeholder="Ingrese el id" name="id_product" required>
                            <label for="" class="label-effect">ID</label>
                        </div>
                        <div class="_position-input">
                            <input type="text" pattern="^[A-Za-z]+$" title="No se permiten numeros en el nombre." placeholder="Ingrese el nombre" name="name" required>
                            <label for="" class="label-effect">Nombre</label>
                        </div>
                        <div class="_position-input">
                            <input type="number" step="any" placeholder="Ingrese el precio" name="price" required>
                            <label for="" class="label-effect">Precio</label>
                        </div>
                        <div class="_position-input">
                            <input type="date" name="fi" required>
                            <label for="" class="label-effect">Fec. Ingreso</label>
                        </div>
                        <div class="_position-input">
                            <input type="date" name="fc" required>
                            <label for="" class="label-effect">Fec. Caducidad</label>
                        </div>
                        <div class="_position-input">
                            <input type="number" min="0" name="stock" placeholder="Ingrese el stock" required>
                            <label for="" class="label-effect">Stock</label>
                        </div>
                        <div class="submit">
                            <button type="submit">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="radius">
                <table>
                    <tr class="--head_table">
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Fec. Ingreso</th>
                        <th>Fec. Caducidad</th>
                        <th>Stock</th>
                        <th>Opciones</th>
                    </tr>
                    <% if(data) {%>
                        <% for(let i=0; i < data.length; i++) { %>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= data[i].id_product %>
                                    </td>
                                    <td>
                                        <%= data[i].name %>
                                    </td>
                                    <td>
                                        <%= data[i].price %>
                                    </td>
                                    <td>
                                        <%= data[i].fi %>
                                    </td>
                                    <td>
                                        <%= data[i].fc %>
                                    </td>
                                    <td>
                                        <%= data[i].stock %>
                                    </td>
                                    <td class="options">
                                        <a href="/edit/<%= data[i].id_product %>">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                                fill="currentColor" class="editIcon">
                                                <path width="1px"
                                                    d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.8 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z"
                                                    fill-rule="evenodd" />
                                            </svg>
                                        </a>
                                        <a href="/delete/<%= data[i].id_product %>">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"
                                                fill="currentColor" class="deleteIcon">
                                                <path
                                                    d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                                            </svg>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                            <% } %>
                                <% } %>
                </table>
            </div>
        </section>
        <br>
        <section class="mobile">
            <p class="a-1">Insertar mercancia</p>
        </section>
        <br>

